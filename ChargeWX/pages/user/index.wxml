
<view class="user_info_wrap">
    <view class="user_img_wrap">

        <view class="container">
        <view class="userinfo">
            <block wx:if="{{!hasUserInfo}}">
            <button bindtap="login" class="goodbutton"> 请登录 </button>
            </block>
            <block wx:else>
                <image class="user_bg" src="{{src}}"></image>
                <view class="user_info">
                    <image class="user_icon" src="{{src}}"></image> 
                    <view class="user_name">{{username}}</view>
                </view>
            </block>
        </view>
        </view>

        
    </view>
</view>

<view class="user_content">
  
  <view class="user_main">
    
   
    <!-- 收货地址管理 -->
    
    <view class="address_wrap">
      历史详单
    </view>
    
    <!-- 应用信息相关 -->
    <view class="app_info_wrap">
      <view class="app_info_item app_info_contact">
        <text>联系客服</text>
        <text></text>
      </view>
      <navigator url="/pages/feedback/index" class="app_info_item">意见反馈</navigator>
      <view class="app_info_item">关于我们</view>
    </view>
    <!-- 推荐 -->
    <view class="recommend_wrap">
      把应用推荐给其他人
    </view>
  </view>
</view>